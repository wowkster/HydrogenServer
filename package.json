{
    "name": "hydrogen-server",
    "version": "1.0.0",
    "description": "Typescript Minecraft Server",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node --loader ts-node/esm --experimental-specifier-resolution=node index.ts",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "prettier": "prettier --write **/*.ts"
    },
    "author": "Wowkster",
    "license": "MIT",
    "private": false,
    "devDependencies": {
        "@types/jest": "^27.5.0",
        "@types/node": "^17.0.31",
        "@wowkster/prettier-config": "^1.0.1",
        "jest": "^28.1.0",
        "ts-jest": "^28.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "prettier": "@wowkster/prettier-config",
    "dependencies": {
        "@types/node-int64": "^0.4.29",
        "@types/uuid": "^8.3.4",
        "bitset": "^5.1.1",
        "chalk": "^5.0.1",
        "js-char-escape": "^1.0.9",
        "js-string-escape": "^1.0.1",
        "json-schema-to-typescript": "^10.1.5",
        "long": "^5.2.0",
        "nbt": "^0.8.1",
        "node-int64": "^0.4.0",
        "prismarine-nbt": "^2.2.1",
        "uuid": "^8.3.2"
    },
    "jest": {
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "testMatch": [
            "**/*.spec.ts"
        ],
        "verbose": true,
        "moduleNameMapper": {
            "#(.*)": "<rootDir>/node_modules/$1"
          }
    }
}
